{
  "compilerOptions": {
    "outDir": "./build",
    "module": "commonjs",
    "target": "es6",
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["*"],
    },
    "types": [
      "d3",
      "node",
    ],
  },
  "exclude": [
    "build",
    "node_modules",
  ],
}
